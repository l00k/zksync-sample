{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "outDir": "./build",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "allowSyntheticDefaultImports": true,

        "jsx": "preserve",
        "resolveJsonModule": true,
        "importHelpers": true,
        "skipLibCheck": true,

        "strict": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,

        "baseUrl": ".",
        "types": [
            "webpack-env",
            "buefy/types"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ],
            "#/*": [
                "src/modules/*",
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "files": [
        "src/shims-vue.d.ts"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**",
        "**/tests/**",
        "jest.config.ts"
    ]
}
